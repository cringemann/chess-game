<UserControl x:Class="Chess_UI.PauseMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chess_UI"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
 
        <Border Width="300" 
            Height="500"
            Background="#202020"
            CornerRadius="10">
            <Grid Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.15*"/>
                </Grid.RowDefinitions>


                <TextBlock 
                       x:Name="PauseMenuText"
                       Text="Pause"
                       FontSize="42"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="LightGray"
                       FontFamily="Franklin Gothic"
                       Margin="0, 25, 0, 0"/>

                <Button Grid.Row="2"
                    Content="Continue"
                    Background="LightGray"
                    Width="270"
                    Height="50"
                    FontFamily="Franklin Gothic"
                    FontSize="20"
                    Click="Continue_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="BorderElement1"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="10"
                                Cursor="Hand">

                                <ContentPresenter x:Name="ContentElement1"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextElement.Foreground="{TemplateBinding Foreground}" />

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal" />


                                        <VisualState x:Name="MouseOver">
                                            <Storyboard>

                                                <ColorAnimation Storyboard.TargetName="BorderElement1"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#474747"
                                                            Duration="0:0:0.1" />

                                                <ColorAnimation Storyboard.TargetName="BorderElement1"
                                                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#474747"
                                                            Duration="0:0:0.1" />

                                                <ColorAnimation Storyboard.TargetName="ContentElement1"
                                                            Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
                                                            To="LightGray"
                                                            Duration="0:0:0.1" />
                                            </Storyboard>
                                        </VisualState>


                                        <VisualState x:Name="Pressed">
                                            <Storyboard>

                                                <ColorAnimation Storyboard.TargetName="BorderElement1"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="DarkGray"
                                                            Duration="0:0:0.1" />

                                                <ColorAnimation Storyboard.TargetName="ContentElement1"
                                                            Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
                                                            To="White"
                                                            Duration="0:0:0.1" />
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            <Button Grid.Row="3"
                    Content="Restart"
                    Background="LightGray"
                    Width="270"
                    Height="50"
                    FontFamily="Franklin Gothic"
                    FontSize="20"
                    Click="Restart_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BorderElement2"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="10"
                                Cursor="Hand">

                            <ContentPresenter x:Name="ContentElement2"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextElement.Foreground="{TemplateBinding Foreground}" />

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />


                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>

                                            <ColorAnimation Storyboard.TargetName="BorderElement2"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#474747"
                                                            Duration="0:0:0.1" />

                                            <ColorAnimation Storyboard.TargetName="BorderElement2"
                                                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#474747"
                                                            Duration="0:0:0.1" />

                                            <ColorAnimation Storyboard.TargetName="ContentElement2"
                                                            Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
                                                            To="LightGray"
                                                            Duration="0:0:0.1" />
                                        </Storyboard>
                                    </VisualState>


                                    <VisualState x:Name="Pressed">
                                        <Storyboard>

                                            <ColorAnimation Storyboard.TargetName="BorderElement2"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="DarkGray"
                                                            Duration="0:0:0.1" />

                                            <ColorAnimation Storyboard.TargetName="ContentElement2"
                                                            Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
                                                            To="White"
                                                            Duration="0:0:0.1" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>


            <Button Grid.Row="4"
                    Content="Main Menu"
                    Background="LightGray"
                    Width="270"
                    Height="50"
                    FontFamily="Franklin Gothic"
                    FontSize="20"
                    Click="MainMenu_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="BorderElement3"
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="10"
                                    Cursor="Hand">

                                <ContentPresenter x:Name="ContentElement3"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  TextElement.Foreground="{TemplateBinding Foreground}" />

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal" />


                                        <VisualState x:Name="MouseOver">
                                            <Storyboard>

                                                <ColorAnimation Storyboard.TargetName="BorderElement3"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#474747"
                                                                Duration="0:0:0.1" />

                                                <ColorAnimation Storyboard.TargetName="BorderElement3"
                                                                Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                                To="#474747"
                                                                Duration="0:0:0.1" />

                                                <ColorAnimation Storyboard.TargetName="ContentElement3"
                                                                Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
                                                                To="LightGray"
                                                                Duration="0:0:0.1" />
                                            </Storyboard>
                                        </VisualState>


                                        <VisualState x:Name="Pressed">
                                            <Storyboard>

                                                <ColorAnimation Storyboard.TargetName="BorderElement3"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="DarkGray"
                                                                Duration="0:0:0.1" />

                                                <ColorAnimation Storyboard.TargetName="ContentElement3"
                                                                Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
                                                                To="White"
                                                                Duration="0:0:0.1" />
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Row="5"
                     Content="Exit"
                     Background="LightGray"
                     Width="270"
                     Height="50"
                     FontFamily="Franklin Gothic"
                    FontSize="20"
                     Click="Exit_Click"
                     Margin="0, 0, 0, 0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="BorderElement4"
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="10"
                                    Cursor="Hand">

                                <ContentPresenter x:Name="ContentElement4"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                TextElement.Foreground="{TemplateBinding Foreground}" />

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal" />


                                        <VisualState x:Name="MouseOver">
                                            <Storyboard>

                                                <ColorAnimation Storyboard.TargetName="BorderElement4"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#474747"
                                                            Duration="0:0:0.1" />

                                                <ColorAnimation Storyboard.TargetName="BorderElement4"
                                                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#474747"
                                                            Duration="0:0:0.1" />

                                                <ColorAnimation Storyboard.TargetName="ContentElement4"
                                                            Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
                                                            To="LightGray"
                                                            Duration="0:0:0.1" />
                                            </Storyboard>
                                        </VisualState>


                                        <VisualState x:Name="Pressed">
                                            <Storyboard>

                                                <ColorAnimation Storyboard.TargetName="BorderElement4"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="DarkGray"
                                                            Duration="0:0:0.1" />

                                                <ColorAnimation Storyboard.TargetName="ContentElement4"
                                                            Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
                                                            To="White"
                                                            Duration="0:0:0.1" />
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </Grid>
        </Border>
    </UserControl>

