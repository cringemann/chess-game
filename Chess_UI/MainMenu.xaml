<UserControl x:Class="Chess_UI.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chess_UI"
             mc:Ignorable="d" 
             d:DesignHeight="700" Width="664">
    <Border BorderThickness="5" BorderBrush="#101010"  Height="498" Width="498" CornerRadius="5">
        <Grid x:Name="MainMenu1" Background="#202020" Height="498" Width="498" 
          HorizontalAlignment="Center"
          VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

            <Line Grid.Column="1" 
           Grid.Row="2" 
           X1="0" Y1="0" 
           X2="0" Y2="500" 
           Stroke="#101010" StrokeThickness="4"
           VerticalAlignment="Stretch" />

            <Line Grid.Column="0" 
           Grid.Row="1" 
           X1="500" Y1="0" 
           X2="0" Y2="0" 
           Stroke="#101010" StrokeThickness="4"
           VerticalAlignment="Stretch" />

            <Line Grid.Column="2" 
           Grid.Row="1" 
           X1="500" Y1="0" 
           X2="0" Y2="0" 
           Stroke="#101010" StrokeThickness="4"
           VerticalAlignment="Stretch" />


            <TextBlock Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Text="Chess"
                   Foreground="LightGray"
                   FontFamily="Franklin Gothic"
                   FontSize="45"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>



        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Text="Time Control"
                   Foreground="LightGray"
                   FontSize="25"
                   HorizontalAlignment="Center"
                   Margin="0, 15, 0, 0"/>

        <ToggleButton x:Name="NoneBorder"
                        Grid.Row="1"
                        Grid.Column="0"
                        Height="35"
                        Width="229"
                        Style="{StaticResource RoundedToggleButtonStyle}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="10,70,0,0"
                        Click="NoneBorder_Click">

            <TextBlock x:Name="NoneText"
                Grid.Row="1"
            Grid.Column="0"
            Text="None"
            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
            FontSize="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        </ToggleButton>

        <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Text="Bullet"
                       Foreground="LightGray"
                       FontSize="20"
                       HorizontalAlignment="Left"
                       Margin="10,120,0,24"/>

        <ToggleButton x:Name="BulletBorder10"
                                Grid.Row="1"
                                Grid.Column="0"
                                Height="35"
                                Width="109.5"
                                Style="{StaticResource RoundedToggleButtonStyle}"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Margin="10,156,0,0"
                                Click="BulletBorder10_Click">
            <TextBlock x:Name="BulletText10"
                       Text="1+0"
                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </ToggleButton>
        <ToggleButton x:Name="BulletBorder11"
                         Grid.Row="1"
                         Grid.Column="0"
                         Height="35"
                         Width="109.5"
                         Style="{StaticResource RoundedToggleButtonStyle}"
                         HorizontalAlignment="Right"
                         VerticalAlignment="Top"
                         Margin="0,155,10,0"
                         Click="BulletBorder11_Click">
            <TextBlock x:Name="BulletText11"
                       Text="1+1"
                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </ToggleButton>


        <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Text="Blitz"
                       Foreground="LightGray"
                       FontSize="20"
                       HorizontalAlignment="Left"
                       Margin="10,207,0,61"/>
        <ToggleButton x:Name="BlitzBorder30"
                         Grid.Row="1"
                         Grid.Column="0"
                         Height="35"
                         Width="109.5"
                         Style="{StaticResource RoundedToggleButtonStyle}"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="10,243,0,0"
                         Click="BlitzBorder30_Click">
            <TextBlock x:Name="BlitzText30"
                Text="3+0"
                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                FontSize="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
        </ToggleButton>
        <ToggleButton x:Name="BlitzBorder32"
                  Grid.Row="1"
                  Grid.Column="0"
                  Height="35"
                  Width="109.5"
                  Style="{StaticResource RoundedToggleButtonStyle}"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top"
                  Margin="0,243,10,0"
                  Click="BlitzBorder32_Click">
            <TextBlock x:Name="BlitzText32"
                Text="3+2"
                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                FontSize="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
        </ToggleButton>

        <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Text="Rapid"
                       Foreground="LightGray"
                       FontSize="20"
                       HorizontalAlignment="Left"
                       Margin="10,294,0,0"/>
        <ToggleButton x:Name="RapidBorder10"
                 Grid.Row="1"
                 Grid.Column="0"
                 Height="35"
                 Width="109.5"
                 Style="{StaticResource RoundedToggleButtonStyle}"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="10,330,0,0"
                 Click="RapidBorder10_Click">
            <TextBlock x:Name="RapidText10"
        Text="10"
        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
        FontSize="20"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"/>
        </ToggleButton>
        <ToggleButton x:Name="RapidBorder30"
          Grid.Row="1"
          Grid.Column="0"
          Height="35"
          Width="109.5"
          Style="{StaticResource RoundedToggleButtonStyle}"
          HorizontalAlignment="Right"
          VerticalAlignment="Top"
          Margin="0,330,10,0"
          Click="RapidBorder30_Click">
            <TextBlock x:Name="RapidText30"
        Text="30"
        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
        FontSize="20"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"/>
        </ToggleButton>



       
            <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   Text="Settings"
                   Foreground="LightGray"
                   FontSize="25"
                   HorizontalAlignment="Center"
                   Margin="0, 15, 0, 0"/>
        <ToggleButton x:Name="FlipBorderBorder1"
                Grid.Row="1"
                Grid.Column="1"
                 Height="35"
                 Width="229"
                 VerticalAlignment="Top"
                HorizontalAlignment="Right"
                 Margin="0,70,10,0"
                 Style="{StaticResource RoundedToggleButtonStyle}"
                 Click="FlipBorder_Click">
            <TextBlock x:Name="FlipBorderText1"
                   Text="Flip board"
                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </ToggleButton>


        <TextBlock Grid.Row="1"
                    Grid.Column="1"
                    Text="White's Name"
                    Foreground="LightGray"
                    FontSize="20"
                    HorizontalAlignment="Left"
                    Margin="10, 120, 0, 0"/>

        <TextBox x:Name="WhiteNameTextBox"
                    KeyDown="WhiteNameTextBox_KeyDwn"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="229"
                    Height="35"
                    FontSize="20"
                    Background="#3b3b3b"
                    Foreground="LightGray"
                    BorderBrush="#3b3b3b"
                    BorderThickness="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Center"
                    Margin="0, 155, 10, 0"/>

        <TextBlock Grid.Row="1"
                    Grid.Column="1"
                    Text="Black's Name"
                    Foreground="LightGray"
                    FontSize="20"
                    HorizontalAlignment="Left"
                    Margin="10, 207, 0, 0"/>
        <TextBox x:Name="BlackNameTextBox"
                    KeyDown="BlackNameTextBox_KeyDwn"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="229"
                    Height="35"
                    FontSize="20"
                    Background="#3b3b3b"
                    Foreground="LightGray"
                    VerticalContentAlignment="Center"
                    BorderBrush="Gray"
                    BorderThickness="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0, 243, 10, 0"/>

            <Button x:Name="StartGameBorder"
        Grid.Row="1"
        Grid.Column="1"
         Height="35"
         Width="109.5"
         VerticalAlignment="Top"
         HorizontalAlignment="Left"
         Margin="12,330,0,0"
         Style="{StaticResource RoundedButtonStyle}"
         Click="StartGame_Click">
                <TextBlock x:Name="StartGameText"
           Text="Start"
           Foreground="LightGray"
           FontSize="20"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"/>
            </Button>
            <Button x:Name="ExitGame1B"
                     Grid.Row="1"
                     Grid.Column="1"
                     Height="35"
                     Width="109.5"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Right"
                     Margin="0,330,10,0"
                     Style="{StaticResource RoundedButtonStyle}"
                     Click="ExitGame1B_Click">
                <TextBlock x:Name="ExitGame1"
                           Text="Exit"
                           Foreground="LightGray"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Button>
            <TextBlock x:Name="Error1"
                       Text="Please select time control"
                        Grid.Row="1"
                        Grid.Column="1"
                        Foreground="Transparent"
                        Margin="10, 370, 0, 0"
                        HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
